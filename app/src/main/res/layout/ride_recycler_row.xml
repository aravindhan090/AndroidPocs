<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:background="@drawable/formula_rossa"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/ride_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/sixty_dp"

            android:fontFamily="sans-serif"
            android:text="Formula Rossa"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_fivedp" />

        <TextView
            android:id="@+id/ride_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/hundred_dp"
            android:fontFamily="sans-serif"
            android:text="Go faster than a F1th car!"
            android:textColor="@color/white"
            android:textSize="@dimen/fifteen_dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>